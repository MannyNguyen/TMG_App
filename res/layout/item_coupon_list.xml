<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="10dp" >

    <ImageView
        android:id="@+id/img_cp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:background="@color/header_color"
        android:text="CPNo" />

    <TextView
        android:id="@+id/cp_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_cp"
        android:layout_toRightOf="@+id/img_cp"
        android:text="CPName"
        android:textSize="@dimen/font_size_cplist"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cpvaluelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cp_type"
        android:layout_below="@+id/cp_type"
        android:layout_centerVertical="true"
        android:text="@string/value"
        android:textSize="@dimen/font_size_cplist"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cpExpire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:layout_toRightOf="@+id/cpvaluelabel"
        android:text="@string/expire"
        android:textSize="@dimen/font_size_cplist"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cpExpireValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cpvalue"
        android:layout_alignBottom="@+id/cpvalue"
        android:layout_alignLeft="@+id/cpExpire"
        android:text="Expire"
        android:textSize="@dimen/font_size_cplist" />

    <TextView
        android:id="@+id/cpvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cpvaluelabel"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/img_cp"
        android:text="CPValue"
        android:textSize="@dimen/font_size_cplist" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/next_icon" />

</RelativeLayout>