<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <HorizontalScrollView
        android:id="@+id/scrollTop"
        android:layout_width="wrap_content"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="none"
        android:layout_height="wrap_content" >
		<RelativeLayout 
		    android:layout_width="wrap_content"
            android:layout_height="wrap_content"
		    >
		    
		
        <LinearLayout
            android:id="@+id/linear_wapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/john"
                android:layout_width="130dp"
                android:layout_height="60dp"
                />

            <ImageView
                android:id="@+id/aino"
                android:layout_width="130dp"
                android:layout_height="60dp"
                />

            <ImageView
                android:id="@+id/farah"
                android:layout_width="130dp"
                android:layout_height="60dp"
                />
        </LinearLayout>
        <View
        android:id="@+id/over_all"
	  	android:layout_height="3dp"
	  	android:layout_width="fill_parent"
	  	android:background="@color/black"
	  	android:layout_alignBottom="@+id/linear_wapper"
	  	   
	    />
	<View
	    android:id="@+id/over_john"
	  	android:layout_height="3dp"
	  	android:layout_width="130dp"
	  	android:background="@color/blue"
	  	android:visibility="invisible"
	  	android:layout_alignBottom="@+id/linear_wapper"
	  	   
	    />
	<View
	    android:id="@+id/over_aino"
	  	android:layout_height="3dp"
	  	android:layout_width="130dp"
	  	android:layout_toRightOf="@+id/over_john"
	  	android:background="@color/blue"
	  	android:visibility="invisible"
	  	android:layout_alignBottom="@+id/linear_wapper"
	  	   
	    />
	<View
	    android:id="@+id/over_fara"
	  	android:layout_height="3dp"
	  	android:layout_width="130dp"
	  	android:layout_toRightOf="@+id/over_aino"
	  	android:background="@color/blue"
	  	android:visibility="invisible"
	  	android:layout_alignBottom="@+id/linear_wapper"
	  	   
	    />
	</RelativeLayout>
    </HorizontalScrollView>
	
    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/scrollTop"
        android:orientation="horizontal" >
    </LinearLayout>
   
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_below="@+id/scrollTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:id="@+id/rela_retry_scroll"
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:visibility="invisible"
        >
        <Button
            android:id="@+id/btn_retry_scroll"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Retry" 
            />
    </RelativeLayout>
	<ProgressBar
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content" 
	    android:id="@+id/process_bar"
	    android:visibility="invisible"
	    android:layout_centerHorizontal="true"
	    />
</RelativeLayout>