<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    android:weightSum="10" >

    <ListView
        android:id="@+id/lv_coupon"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:listSelector="#00000000"
        android:choiceMode="singleChoice"
        android:cacheColorHint="#00000000"
        android:layout_marginTop="50dp"
        android:dividerHeight="0.5dp" >
    </ListView>

    <RelativeLayout
        android:id="@+id/rela_retry"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignTop="@+id/lv_coupon"
        android:background="@color/white"
        android:visibility="invisible" >

        <Button
            android:id="@+id/btn_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Retry" />
    </RelativeLayout>
	<RelativeLayout
	    android:layout_height="50dp"
	    android:background="@color/bluefb1"
	    android:layout_width="fill_parent"
	    android:layout_alignParentTop="true" 
	    >
	    <ImageView
	        android:layout_height="35dp"
	        android:layout_width="55dp"
	        android:onClick="sendInvite"
	        android:background="@drawable/send2"
	        android:clickable="true"
	        android:layout_marginLeft="10dp"
	        android:layout_centerVertical="true"
	        android:layout_alignParentLeft="true"
	        />
	    <ImageView
	        android:id="@+id/img_checkall"
	        android:layout_height="35dp"
	        android:layout_width="35dp"
	        android:text="All"
	        android:layout_marginRight="20dp"
	        android:clickable="true"
	        android:background="@drawable/icontick_deactive"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true" 
	        />
	     <ImageView
	        android:layout_height="45dp"
	        android:layout_width="65dp"
	        android:text="All"
	        android:layout_marginRight="10dp"
	        android:clickable="true"
	        android:onClick="checkAll"
	        android:visibility="visible"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true" 
	        />
	</RelativeLayout>
</RelativeLayout>