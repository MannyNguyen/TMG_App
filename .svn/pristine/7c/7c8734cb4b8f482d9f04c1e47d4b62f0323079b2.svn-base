<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <!-- if set background for  LinearLayout then it will be clicked -->

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/icon"
        android:text="Sky Chen"
        android:textSize="@dimen/font_size_list_drawer"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/card_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_toRightOf="@+id/icon"
        android:text="Card No: 123456"
        android:textSize="@dimen/font_size_list_drawer"
        android:textStyle="bold" />

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/tv_membercard" />

    

    <TextView
        android:id="@+id/tv_membercard"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/card_number"
        android:layout_marginLeft="24dp"
        android:background="#B4B4B4"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="@string/viewmembercard"
        android:textSize="@dimen/font_size_list_drawer"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/username"
        android:paddingLeft="5dp"
        android:paddingRight="3dp"
        android:src="@drawable/username" />

   

    <View
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#B4B4B4"
        android:layout_below="@+id/tv_membercard" />
    

</RelativeLayout>